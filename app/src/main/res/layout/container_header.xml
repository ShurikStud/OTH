<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/container_header_textview_container_descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/barcode"
        style="@style/TextStyleContainerName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/container_header_textview_counter"
        app:layout_constraintBottom_toBottomOf="@id/container_header_textview_counter"
        app:layout_constraintHorizontal_weight="2"

        />
    <TextView
        android:id="@+id/container_header_textview_container_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/container"
        style="@style/TextStyleContainerName"
        app:layout_constraintLeft_toRightOf="@id/container_header_textview_container_descr"
        app:layout_constraintRight_toLeftOf="@id/container_header_textview_counter"
        app:layout_constraintTop_toTopOf="@id/container_header_textview_counter"
        app:layout_constraintBottom_toBottomOf="@id/container_header_textview_counter"
        app:layout_constraintHorizontal_weight="4"
        />

    <TextView
        android:id="@+id/container_header_textview_counter"
        style="@style/TextStyleContainerValue"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="6" />

</android.support.constraint.ConstraintLayout>